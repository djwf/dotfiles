# BSPWM HOTKEYS {{{1

# WINDOWS

# Quit bspwm
alt + shift + Escape
  bspc quit

# Close window
alt + w
  bspc window -c

# ?
alt + t
  bspc desktop -l next

# Balance desktop
super + b
  bspc desktop -B

# Toggle window between floating and fullscreen
alt + {s,f}
  bspc window -t {floating,fullscreen}

# Grave: Switch to last window
# Tab: Switch to last desktop
alt + {grave,Tab}
  bspc {window,desktop} -f last

# Swap selected window with last window
alt + apostrophe
  bspc window -s last

# ?
alt + {o,i}
  bspc control --record-history off; \
  bspc window {older,newer} -f; \
  bspc control --record-history on

# Transplant selected window to last window
alt + y
  bspc window -w last.manual

# ?
alt + m
  bspc window -s biggest

# No shift: Focus the window in that direction
# Shift: Swap the selected window with the given window
alt + {_,shift + }{h,j,k,l}
  bspc window -{f,s} {left,down,up,right}

# No shift: Cycle through windows
# Shift: Cycle through windows backwards
alt + {_,shift + }c
  bspc window -f {next,prev}

# ?
alt + {comma,period}
  bspc desktop -C {backward,forward}

# ?
alt + bracket{left,right}
  bspc desktop -f {prev,next}

# Preselect splitting area of selected window
super + alt + {h,j,k,l}
  bspc window -p {left,down,up,right}

# Window: Cancel preselected splitting area
# Desktop: Cancel preselection of all windows of selected desktop
super + {_,shift + }space
  bspc {window -p cancel,desktop -c}

# Resize window
super + {h,j,k,l}
  bspc window -e {left -10,down +10,up -10,right +10}

# Resize window
super + shift + {h,j,k,l}
  bspc window -e {right -10,up +10,down -10,left +10}

# Set splitting ratio of selected window
# alt + ctrl + {1-9}
#   bspc window -r 0.{1-9}

# Desktop: Focus given desktop
# Window: Send selected window to the given desktop
alt + {_,shift + }{1-9,0}
  bspc {desktop -f,window -d} {1-9,10}

# Focus at pointer position
~button1
  bspc pointer -g focus

# Move/resize side/resize corner with mouse buttons
alt + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

# ?
alt + !button{1-3}
  bspc pointer -t %i %i

# Ungrab (terminate current pointer action)
alt + @button{1-3}
  bspc pointer -u

# WM INDEPENDENT HOTKEYS {{{1

# Open new urxvt client
alt + Return
  urxvtc

# Open dmenu
alt + space
  dmenu_run -z

# make sxhkd reload its configuration files:
alt + r
  pkill -USR1 -x sxhkd

# CUSTOM {{{1

# Change window gap
super + {minus,equal}
  bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2))

# Reset window gap
super + 0
  bspc config -d focused window_gap 6
